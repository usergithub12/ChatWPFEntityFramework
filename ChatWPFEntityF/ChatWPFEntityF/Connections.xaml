<Window x:Class="ChatWPFEntityF.Connections"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatWPFEntityF"
        mc:Ignorable="d"
        Title="Connections" Height="265.597" Width="320.485">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Name="st_show">
            
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Name="st_chat">
            <Image Grid.Column="0"></Image>
            <TextBox VerticalAlignment="Bottom" Name="tb_message"></TextBox>
            <Button  Grid.Column="1" Grid.Row="2" VerticalAlignment="Bottom" x:Name="btn_Send" Height="30" Click="Btn_Send_Click">Send</Button>
            <Image Grid.Column="2"></Image>
        </StackPanel>
    </Grid>
</Window>
